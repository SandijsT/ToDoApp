@model ToDo.Models.Entities.ATask

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<h2>Task Details</h2>
<hr>

<div class="row">
    
</div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            <small>Task completed:</small>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayTextFor(model => model.IsDone)
        </dd>
    </dl>
    
<div>
    @Html.ActionLink("Delete", "Delete", "Task", new { id = Model.Id, listId = Model.TaskList.Id }, new { @class = "btn btn-danger"}) |
    @Html.ActionLink("Edit", "Edit","Task", new { id =  Model.Id, listId = Model.TaskList.Id }, new { @class = "btn btn-primary" }) |
    <a asp-action="Index" asp-route-id="@Model.TaskList.Id">Back to your tasks</a>
</div>
