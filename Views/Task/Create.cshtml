@model ToDo.Models.Entities.ATask


@{
    ViewBag.Title = "Add New Task";
    Layout = "_Layout";
}

<h1>Add Task</h1>

<h4>Add a new task</h4>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control">
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="control-label">Is the task already completed?</label>
                <input asp-for="IsDone" class="form-control-input">
                <span asp-validation-for="IsDone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to your tasks</a>
</div>

